// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  password     String
  firstName    String?
  lastName     String?
  organization String   @db.ObjectId
  role         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Organization {
  id                    String                @id @default(auto()) @map("_id") @db.ObjectId
  businessName          String
  businessDomain        String                @unique
  EIN                   String?               @unique
  stripeId              String?
  //add something for subscribed: bool and subscriptionPlan: enum... maybe this is needed? idk?
  accountRepresentative AccountRepresentative
  documentSpaces        DocumentSpace[]
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
}

type AccountRepresentative {
  userId String @db.ObjectId
}

type DocumentSpace {
  index      String
  bucketName String?
  role       String?
  //figure out the rest later
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  message   String
  feedback  String?
  metadata  String
  createdAt DateTime @default(now())
}
